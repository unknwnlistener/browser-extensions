{
    "manifest_version": 2,
    "name": "WebRecorder Toolkit",
    "description": "Uses REST api to store action details to the server",
    "browser_action": {
        "default_icon": {
            "32": "logo_square.png",
            "128": "logo_128.png"
        },
        "default_title": "Web Recorder",
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["./js/jquery-3.4.1.min.js","./js/js.cookie.js","./js/background.js"]
    },  
    "version": "1.0.0",
    "permissions": [
        "tabs",
        "cookies",
        "activeTab",
        "storage",
        "https://*/*",
        "http://localhost:3000/*"
    ]
}