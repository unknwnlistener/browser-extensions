{
    "manifest_version": 2,
    "name": "WebRecorder Toolkit",
    "description": "Uses REST api to store action details to the server",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "index.html"
    },
    "version": "1.0.0",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "https://*/*",
        "http://localhost:3000/*"
    ]
}